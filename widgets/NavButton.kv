#:import NavButton widgets.NavButton
#:import IconButton widgets.IconButton

<NavButton>:
    size_hint: None, None
    size: 100, 40
    orientation: 'horizontal'
    spacing: 6
    padding: [8, 8]
    canvas.before:
        Color:
            rgba: self.bg_color_active if self.active else self.bg_color_inactive
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [6, 6, 6, 6]

    # Icono con tinte seg√∫n activo
    Image:
        source: root.icon_source
        size_hint: None, None
        size: 16, 16
        color: root.icon_tint_active if root.active else root.icon_tint_inactive

    Label:
        text: root.text
        color: root.text_color_active if root.active else root.text_color_inactive
        font_size: 12
        halign: 'center'
        valign: 'middle'
        text_size: self.size
