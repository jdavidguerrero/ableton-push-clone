#:kivy 2.3.0
#:import dp kivy.metrics.dp

<TrackSelector@BoxLayout>:
    size_hint_y: None
    height: dp(50)
    orientation: 'horizontal'
    padding: dp(66), dp(10)
    spacing: dp(15)
    
    # Properties
    current_track: 0
    current_track_name: "Track 1"
    total_tracks: 8
    
    canvas.before:
        Color:
            rgba: 0.06, 0.06, 0.06, 1
        Rectangle:
            pos: self.pos
            size: self.size
        # Bottom border
        Color:
            rgba: 0.25, 0.25, 0.25, 1
        Line:
            points: [self.x, self.y, self.right, self.y]
            width: 1
    
    # Previous track button
    Button:
        text: "◀◀"
        size_hint: None, None
        size: dp(50), dp(25)
        background_color: (0.15, 0.15, 0.15, 1) if root.current_track > 0 else (0.08, 0.08, 0.08, 1)
        color: (0.7, 0.7, 0.7, 1) if root.current_track > 0 else (0.3, 0.3, 0.3, 1)
        font_size: dp(10)
        disabled: root.current_track <= 0
        on_release: root.previous_track()
    
    # Current track display
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(1)
        
        Label:
            text: "Track"
            font_size: dp(9)
            color: 0.6, 0.6, 0.6, 1
            size_hint_y: None
            height: dp(10)
        
        Label:
            text: root.current_track_name
            font_size: dp(14)
            color: 1, 1, 1, 1
            bold: True
            size_hint_y: None
            height: dp(16)
    
    # Track color indicator
    Widget:
        size_hint_x: None
        width: dp(6)
        canvas:
            Color:
                rgba: (0, 0.016, 1, 1) if root.current_track == 0 else (0, 1, 0.05, 1) if root.current_track == 1 else (1, 0.6, 0, 1)
            RoundedRectangle:
                pos: self.x + dp(1), self.y + dp(8)
                size: dp(4), dp(10)
                radius: [dp(2)]
    
    # Next track button
    Button:
        text: "▶▶"
        size_hint: None, None
        size: dp(50), dp(25)
        background_color: (0.15, 0.15, 0.15, 1) if root.current_track < root.total_tracks - 1 else (0.08, 0.08, 0.08, 1)
        color: (0.7, 0.7, 0.7, 1) if root.current_track < root.total_tracks - 1 else (0.3, 0.3, 0.3, 1)
        font_size: dp(10)
        disabled: root.current_track >= root.total_tracks - 1
        on_release: root.next_track()
