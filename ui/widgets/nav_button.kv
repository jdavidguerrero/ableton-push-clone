<NavButton>:
    size_hint: None, None
    size: dp(120), dp(40)
    orientation: 'horizontal'
    spacing: dp(8)  # Más espacio entre ícono y texto
    padding: [dp(10), dp(8)]  # Mejor padding
    canvas.before:
        Color:
            rgba: self.bg_color_active if self.active else self.bg_color_inactive
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(6)]

    # Icon with improved styling
    Image:
        source: root.icon_source
        size_hint: None, None
        size: dp(18), dp(18)  # Ícono ligeramente más grande
        color: (1, 1, 1, 1) if root.active else (0.6, 0.6, 0.6, 1)  # Blanco cuando activo
        pos_hint: {'center_y': 0.5}

    # Text with improved styling
    Label:
        text: root.text
        color: (1, 1, 1, 1) if root.active else (0.8, 0.8, 0.8, 1)
        font_size: dp(13)  # Texto más grande
        bold: True if root.active else False  # Negrita cuando activo
        halign: 'center'
        valign: 'middle'
        text_size: self.size
        pos_hint: {'center_y': 0.5}
