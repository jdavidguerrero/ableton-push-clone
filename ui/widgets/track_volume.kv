#:kivy 2.3.0

<TrackVolume>:
    size_hint: None, None
    width: dp(86)
    height: dp(110)  # Slightly taller for better spacing
    orientation: 'vertical'
    padding: dp(6), dp(6)
    spacing: dp(6)  # More consistent spacing
    canvas.before:
        Color:
            rgba: (0.15, 0.15, 0.15, 1)  # Darker, more modern background
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(6),]  # Slightly more rounded

    # Volume Section
    BoxLayout:
        size_hint: 1, None
        height: dp(18)
        spacing: dp(6)
        Label:
            text: "VOL"
            color: 0.8, 0.8, 0.8, 1
            font_size: dp(9)
            bold: True
            size_hint_x: None
            width: dp(24)
        Slider:
            min: 0.0
            max: 1.0
            value: root.volume
            on_value: root.volume = self.value
            cursor_size: dp(12), dp(12)  # Larger cursor

    # Pan Section - Centered slider for better UX
    BoxLayout:
        size_hint: 1, None
        height: dp(18)
        spacing: dp(6)
        Label:
            text: "PAN"
            color: 0.8, 0.8, 0.8, 1
            font_size: dp(9)
            bold: True
            size_hint_x: None
            width: dp(24)
        Slider:
            min: -1.0
            max: 1.0
            value: root.pan
            on_value: root.pan = self.value
            cursor_size: dp(12), dp(12)
            # Visual center indicator could be added here

    # Sends Section - Improved layout
    BoxLayout:
        size_hint: 1, None
        height: dp(22)
        spacing: dp(4)
        Label:
            text: "SENDS"
            color: 0.7, 0.7, 0.7, 1
            font_size: dp(8)
            size_hint_x: None
            width: dp(76)
            halign: 'center'
    
    BoxLayout:
        size_hint: 1, None
        height: dp(18)
        spacing: dp(2)
        
        # Send A
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(2)
            Label:
                text: "A"
                color: 0.8, 0.8, 0.8, 1
                font_size: dp(9)
                size_hint_y: None
                height: dp(12)
            Slider:
                min: 0.0
                max: 1.0
                value: root.send_a
                on_value: root.send_a = self.value
                orientation: 'vertical'
                cursor_size: dp(8), dp(8)
        
        # Send B
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(2)
            Label:
                text: "B"
                color: 0.8, 0.8, 0.8, 1
                font_size: dp(9)
                size_hint_y: None
                height: dp(12)
            Slider:
                min: 0.0
                max: 1.0
                value: root.send_b
                on_value: root.send_b = self.value
                orientation: 'vertical'
                cursor_size: dp(8), dp(8)
        
        # Send C
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(2)
            Label:
                text: "C"
                color: 0.8, 0.8, 0.8, 1
                font_size: dp(9)
                size_hint_y: None
                height: dp(12)
            Slider:
                min: 0.0
                max: 1.0
                value: root.send_c
                on_value: root.send_c = self.value
                orientation: 'vertical'
                cursor_size: dp(8), dp(8)

    # Mute / Solo / Arm - Improved spacing and colors
    BoxLayout:
        size_hint: 1, None
        height: dp(24)
        spacing: dp(3)

        Button:
            text: "M"
            font_size: dp(11)
            bold: True
            background_normal: ''
            background_color: (1, 0.6, 0.2, 1) if root.is_mute else (0.25, 0.25, 0.25, 1)
            color: (1, 1, 1, 1) if root.is_mute else (0.7, 0.7, 0.7, 1)
            on_release: root.is_mute = not root.is_mute
            
        Button:
            text: "S"
            font_size: dp(11)
            bold: True
            background_normal: ''
            background_color: (0.2, 0.6, 1, 1) if root.is_solo else (0.25, 0.25, 0.25, 1)
            color: (1, 1, 1, 1) if root.is_solo else (0.7, 0.7, 0.7, 1)
            on_release: root.is_solo = not root.is_solo
            
        Button:
            text: "A"
            font_size: dp(11)
            bold: True
            background_normal: ''
            background_color: (0.2, 0.8, 0.4, 1) if root.is_arm else (0.25, 0.25, 0.25, 1)
            color: (1, 1, 1, 1) if root.is_arm else (0.7, 0.7, 0.7, 1)
            on_release: root.is_arm = not root.is_arm