#:kivy 2.3.0
#:import dp kivy.metrics.dp

<TrackVolume>:
    size_hint: None, None
    width: dp(88)  # Increased width to match track width exactly
    height: dp(90)
    orientation: 'vertical'
    padding: dp(3), dp(3)  # Reduced padding to fit better
    spacing: dp(2)  # Tight spacing
    canvas.before:
        Color:
            rgba: (0.12, 0.12, 0.12, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(4),]

    # Volume fader - HORIZONTAL with proper sizing
    BoxLayout:
        size_hint: 1, None
        height: dp(18)  # Reduced height
        spacing: dp(3)  # Tight spacing
        orientation: 'horizontal'
        
        Label:
            text: "VOL"
            color: 0.8, 0.8, 0.8, 1
            font_size: dp(7)  # Smaller font
            bold: True
            size_hint_x: None
            width: dp(20)  # Reduced width
            halign: 'center'
            valign: 'middle'
        
        Slider:
            min: 0.0
            max: 1.0
            value: root.volume
            orientation: 'horizontal'
            on_value: root.volume = self.value
            cursor_size: dp(8), dp(12)  # Smaller cursor

    # Pan knob - centered with proper spacing
    BoxLayout:
        size_hint: 1, None
        height: dp(22)  # Compact height
        
        Widget:
            size_hint_x: 0.3
        
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: dp(20)
            spacing: dp(1)
            
            MixerKnob:
                value: (root.pan + 1) / 2
                on_touch_down: 
                    if self.collide_point(*args[1].pos): \
                    root.pan = (self.value * 2) - 1
            
            Label:
                text: "PAN"
                font_size: dp(6)
                color: 0.7, 0.7, 0.7, 1
                size_hint_y: None
                height: dp(8)
                halign: 'center'
        
        Widget:
            size_hint_x: 0.3

    # Sends knobs - with labels below
    BoxLayout:
        size_hint: 1, None
        height: dp(22)  # Compact height
        spacing: dp(2)
        padding: dp(2), 0
        
        # Send A
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(1)
            
            MixerKnob:
                value: root.send_a
                on_touch_down:
                    if self.collide_point(*args[1].pos): \
                    root.send_a = self.value
            
            Label:
                text: "A"
                font_size: dp(6)
                color: 0.7, 0.7, 0.7, 1
                size_hint_y: None
                height: dp(8)
                halign: 'center'
        
        # Send B
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(1)
            
            MixerKnob:
                value: root.send_b
                on_touch_down:
                    if self.collide_point(*args[1].pos): \
                    root.send_b = self.value
            
            Label:
                text: "B"
                font_size: dp(6)
                color: 0.7, 0.7, 0.7, 1
                size_hint_y: None
                height: dp(8)
                halign: 'center'
        
        # Send C
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(1)
            
            MixerKnob:
                value: root.send_c
                on_touch_down:
                    if self.collide_point(*args[1].pos): \
                    root.send_c = self.value
            
            Label:
                text: "C"
                font_size: dp(6)
                color: 0.7, 0.7, 0.7, 1
                size_hint_y: None
                height: dp(8)
                halign: 'center'

    # Mute / Solo / Arm - compact
    BoxLayout:
        size_hint: 1, None
        height: dp(18)  # Reduced height
        spacing: dp(2)  # Tight spacing

        Button:
            text: "M"
            font_size: dp(8)  # Smaller font
            bold: True
            background_normal: ''
            background_color: (1, 0.6, 0.2, 1) if root.is_mute else (0.25, 0.25, 0.25, 1)
            color: (1, 1, 1, 1) if root.is_mute else (0.7, 0.7, 0.7, 1)
            on_release: root.is_mute = not root.is_mute
            
        Button:
            text: "S"
            font_size: dp(8)
            bold: True
            background_normal: ''
            background_color: (0.2, 0.6, 1, 1) if root.is_solo else (0.25, 0.25, 0.25, 1)
            color: (1, 1, 1, 1) if root.is_solo else (0.7, 0.7, 0.7, 1)
            on_release: root.is_solo = not root.is_solo
            
        Button:
            text: "A"
            font_size: dp(8)
            bold: True
            background_normal: ''
            background_color: (0.2, 0.8, 0.4, 1) if root.is_arm else (0.25, 0.25, 0.25, 1)
            color: (1, 1, 1, 1) if root.is_arm else (0.7, 0.7, 0.7, 1)
            on_release: root.is_arm = not root.is_arm