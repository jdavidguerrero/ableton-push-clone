#:kivy 2.3.0

<TrackHeader>:
    # ButtonBehavior nos permite on_release
    size_hint: None, None
    width: dp(88)
    height: dp(30)
    padding: dp(10)
    canvas.before:
        Color:
            rgba: root.color_rgba
        Rectangle:
            pos: self.pos
            size: self.size
        # Add a subtle border
        Color:
            rgba: 0.4, 0.4, 0.4, 1
        Line:
            width: 1
            rectangle: (*self.pos, *self.size)

    Label:
        text: root.track_name
        color: 1,1,1,1
        font_size: dp(12)
        bold: True
        halign: 'center'
        valign: 'middle'
        text_size: self.size