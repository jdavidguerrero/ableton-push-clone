<NavigationBar>:
    size_hint_y: None
    height: dp(60)
    orientation: 'horizontal'
    spacing: 12
    padding: [20, 12]
    canvas.before:
        Color:
            rgba: 0.08, 0.08, 0.08, 1  # Dark background, same as StatusBar
        Rectangle:
            pos: self.pos
            size: self.size
        # Remove the border - no Line widget

    NavButton:
        text: "Clip View"
        icon_source: "clip.png"
        active: True
        size_hint_y: None
        height: dp(40)
        pos_hint: {'center_y': 0.5}
        on_release: root.set_active(0)

    NavButton:
        text: "Devices"
        icon_source: "devices.png"
        size_hint_y: None
        height: dp(40)
        pos_hint: {'center_y': 0.5}
        on_release: root.set_active(1)

    NavButton:
        text: "Note"
        icon_source: "note.png"
        size_hint_y: None
        height: dp(40)
        pos_hint: {'center_y': 0.5}
        on_release: root.set_active(2)

    NavButton:
        text: "Settings"
        icon_source: "settings.png"
        size_hint_y: None
        height: dp(40)
        pos_hint: {'center_y': 0.5}
        on_release: root.set_active(3)
