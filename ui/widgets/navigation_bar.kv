<NavigationBar>:
    size_hint_y: None
    height: dp(60)
    orientation: 'horizontal'
    spacing: dp(8)  # Menos spacing entre botones
    padding: [dp(18), dp(10)]  # Mejor padding
    canvas.before:
        Color:
            rgba: 0.08, 0.08, 0.08, 1  # Dark background
        Rectangle:
            pos: self.pos
            size: self.size

    NavButton:
        text: "Clip View"
        icon_source: "clip.png"
        active: root.selected_index == 0
        size_hint_y: None
        height: dp(40)
        pos_hint: {'center_y': 0.5}
        on_release: root.set_active(0)

    NavButton:
        text: "Devices"
        icon_source: "devices.png"
        active: root.selected_index == 1
        size_hint_y: None
        height: dp(40)
        pos_hint: {'center_y': 0.5}
        on_release: root.set_active(1)

    NavButton:
        text: "Note"
        icon_source: "note.png"
        active: root.selected_index == 2
        size_hint_y: None
        height: dp(40)
        pos_hint: {'center_y': 0.5}
        on_release: root.set_active(2)

    NavButton:
        text: "Settings"
        icon_source: "settings.png"
        active: root.selected_index == 3
        size_hint_y: None
        height: dp(40)
        pos_hint: {'center_y': 0.5}
        on_release: root.set_active(3)
